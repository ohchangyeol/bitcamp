==>null 처리 함수 
==>null 인 경우, null 이 아닌 경우 처리
==>NVL NOTATION 

SELECT 
name, NVL(salary,0)
FROM emp_test;

----------==> 데이터타입 다름
SELECT 
name, NVL(salary,'무급')
FROM emp_test;
----------------
SELECT 
name, NVL2(salary,salary , 0) , NVL(salary,0)
FROM emp_test;

SELECT 
name, NVL2(salary,salary*12 , 0) , NVL(salary*12,0)
FROM emp_test;

SELECT 
name, NVL2(title,title ,'<직급없음>') , NVL(title ,'<직급없음>'), NVL2(title,'직급있음' ,'<직급없음>')
FROM emp_test;
==============DECODE if ~ else문? 
SELECT 
name, DECODE (title, NULL,'<직급없음>', '직급있음')
FROM emp_test;

------------------ifelse ~ else
SELECT 
name, DECODE (title, 
NULL,'<직급없음>',
'사장','회사의아버지',
'부사장','회사의어머니',
'직급있음'),title
FROM emp_test;

