package ex1;

public class Prob {

	public static void main(String[] args) {
		int inputInt = Integer.parseInt(args[0]);
			
		
		for (int i = 0 ; i <= inputInt ; i++){
			String sum = "";
			for(int j = 1; j < inputInt - i; j++ ) {
				sum += "r";
			}
			for(int k = 0 ; k < i*2+1; k++) {
				sum +="*";
			}
			System.out.println(sum);
		}
		
		
		
		
		
		
		
//		for (int i = 0 ; i < inputInt ; i++){
//			String sum ="";
//			for (int j = i ;j < i*2 ; j++){
//				sum += " ";
//			}
//			for (int k = i ; k < inputInt;k++ ){
//				sum += "*";
//			}
//			inputInt--;
//			System.out.println(sum);
//		}
	}

}
